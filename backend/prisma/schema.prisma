datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  totalKm   Float    @default(0)
  activities Activity[]
}

model Activity {
  id        Int      @id @default(autoincrement())
  activity  String
  duration  Int
  date      DateTime
  kilometers Float
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
